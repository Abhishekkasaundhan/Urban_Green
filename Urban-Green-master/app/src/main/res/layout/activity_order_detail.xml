<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nbg5"
    tools:context=".orderDetail">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="587dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_round" />

    <EditText
        android:id="@+id/orderAddress"
        android:layout_width="361dp"
        android:layout_height="51dp"
        android:layout_marginBottom="9dp"
        android:background="#4E99E8"
        android:inputType="textPostalAddress"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/orderPhone"
        android:layout_width="356dp"
        android:layout_height="46dp"
        android:background="#4E99E8"
        android:inputType="phone"
        android:maxLength="10"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/orderPincode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/orderPincode"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:background="#4E99E8"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/plant_id"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/orderPhone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="250dp"
        android:text="Address"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/orderAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="208dp"
        android:layout_height="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="9dp"
        android:text="Phone Number"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/orderPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderAddress" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:text="Pin code"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/plant_id"
        app:layout_constraintEnd_toStartOf="@+id/orderPincode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderPhone" />

    <Button
        android:id="@+id/orderconfirm"
        android:layout_width="167dp"
        android:layout_height="54dp"
        android:layout_marginBottom="64dp"
        android:text="confirm order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_id" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="136dp"
        android:gravity="center_vertical"
        android:text="Plant id"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plant_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/plant_id"
        android:layout_width="269dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:background="#4E99E8"
        android:hint="enter the plant id given in description"
        android:inputType="number"
        android:maxLength="13"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/orderconfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/orderPincode"
        app:layout_constraintVertical_bias="0.985" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="321dp"
        android:text="Name"
        android:textColor="#F0F1F4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/orderName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/orderName"
        android:layout_width="362dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:background="#4E99E8"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>