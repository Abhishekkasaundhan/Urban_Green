<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nbg2"
    tools:context=".AddProduct">


    <EditText
        android:id="@+id/plantNameInput"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/plantDesInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="81dp"
        android:background="#F4EFEF"
        android:hint="plant name" />

    <EditText
        android:id="@+id/plantDesInput"
        android:layout_width="368dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/plantPriceInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="311dp"
        android:layout_marginBottom="56dp"
        android:background="#F4EFEF"
        android:hint="description" />

    <EditText
        android:id="@+id/plantPriceInput"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="397dp"
        android:background="#F4EFEF"
        android:hint="price"
        android:inputType="number|numberDecimal" />

    <Button
        android:id="@+id/SubmitBtn"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:background="#69F0AE"
        android:text="Submit" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="158dp" />

    <EditText
        android:id="@+id/sellerphone"
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:layout_below="@id/plantPriceInput"
        android:layout_alignBottom="@+id/plantPriceInput"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"

        android:layout_marginBottom="-55dp"
        android:height="5dp"
        android:background="#FFFFFF"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="10" />

    <EditText
        android:id="@+id/Plantid"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"

        android:layout_marginTop="-48dp"
        android:layout_marginBottom="184dp"
        android:background="#FFFFFF"
        android:hint="plant id"
        android:inputType="number"
        android:maxLength="13" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SubmitBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="-55dp"
        android:layout_marginBottom="140dp"
        android:text="plant id must be of 13 digit having sellers phone + three digit unique id which is provided by seller ."
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/PlantLink"
        android:layout_width="368dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/plantNameInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="201dp"
        android:layout_marginBottom="46dp"
        android:background="#FFFFFF"
        android:hint="Image link" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="361dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="155dp"
        android:text="Please provide an open link for reference image of your product"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="."
        android:visibility="invisible" />
</RelativeLayout>